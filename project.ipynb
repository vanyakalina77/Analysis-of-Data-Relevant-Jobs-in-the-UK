# Impoting libraries
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from datasets import load_dataset
import ast
import seaborn as sns

# Loading Data
dataset = load_dataset('lukebarousse/data_jobs')
df = dataset['train'].to_pandas()

# Data CleanUp
df['job_posted_date'] = pd.to_datetime(df['job_posted_date'])

df['job_skills'] = df['job_skills'].apply(lambda x: ast.literal_eval(x) if pd.notna(x) else x)

# filter for Uk based roles
df_DA_UK = df[(df['job_country'] == 'United Kingdom') & (df['job_title'] == 'Data Analyst')].copy() 


df_plot = df_DA_UK['job_location'].replace('United Kingdom', 'Anywhere').value_counts().head(10).to_frame()

sns.set_theme(style='ticks')
sns.barplot(data=df_plot, x='count', y='job_location', hue='count', palette='dark:b_r')  
sns.despine()
plt.title('Count of Job Locantions for Data Analyst in the UK')
plt.xlabel('Number of Jobs')
plt.ylabel(' ')
plt.show()

dict_column =  {
    'job_work_from_home': 'Work from Home Offered',
    'job_no_degree_mention': 'Degree Requirement',
    'job_health_insurance' : 'Health Insurance Offered',

}

fig,ax = plt.subplots(1, 3)
fig.set_size_inches((12, 5))

for i, (column, title) in enumerate(dict_column.items()):
    values = df_DA_UK[column].value_counts()
    ax[i].pie(values, labels=values.index, autopct='%1.1f%%', startangle=90)
    ax[i].set_title(title)

plt.tight_layout()
plt.show()

plt.tight_layout()
plt.show()

